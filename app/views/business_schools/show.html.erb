<div class="page-header">
  <h3>Business School #<%= @business_school.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Business school name</dt>
      <dd><%= @business_school.business_school_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/business_schools" class="btn btn-primary">
        Back
      </a>
      <a href="/business_schools/<%= @business_school.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_business_school/<%= @business_school.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Business school has many users -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Users
      </li>

      <% @business_school.users.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.email %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Business school has many contacts -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Contacts
      </li>

      <% @business_school.contacts.each do |contact| %>
        <li class="list-group-item">
          <a href="/contacts/<%= contact.id %>">
            <%= contact.first_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/contacts/<%= contact.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
