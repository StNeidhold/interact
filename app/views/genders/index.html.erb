<div class="page-header">
  <h1>
    Genders
    <a href="/genders/new" class="btn btn-lg btn-success">New Gender</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Gender</th>
        <th>Actions</th>
      </tr>

      <% @genders.each do |gender| %>
      <tr>
        <td><%= gender.gender %></td>
        <td>
          <a href="/genders/<%= gender.id %>" class="btn btn-primary">Show</a>
          <a href="/genders/<%= gender.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_gender/<%= gender.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @genders, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
