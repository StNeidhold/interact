<div class="page-header">
  <h1>
    Firm groups
    <a href="/firm_groups/new" class="btn btn-lg btn-success">New Firm group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Firm</th>
        <th>Group name</th>
        <th>Actions</th>
      </tr>

      <% @firm_groups.each do |firm_group| %>
      <tr>
        <td>
          <% if firm_group.firm.present? %>
            <a href="/firms/<%= firm_group.firm.id %>">
              <%= firm_group.firm.name %>
            </a>
          <% end %>
        </td>
        <td><%= firm_group.group_name %></td>
        <td>
          <a href="/firm_groups/<%= firm_group.id %>" class="btn btn-primary">Show</a>
          <a href="/firm_groups/<%= firm_group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_firm_group/<%= firm_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @firm_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
