<div class="page-header">
  <h1>
    Interactions
    <a href="/interactions/new" class="btn btn-lg btn-success">New Interaction</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Contact</th>
        <th>Setting</th>
        <th>Date</th>
        <th>Recruiting event</th>
        <th>Time</th>
        <th>Location</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.user.email %></td>
        <td><%= interaction.contact.first_name %></td>
        <td><%= interaction.setting_id %></td>
        <td><%= interaction.date %></td>
        <td><%= interaction.recruiting_event_id %></td>
        <td><%= interaction.time %></td>
        <td><%= interaction.location %></td>
        <td><%= interaction.notes %></td>
        <td>
          <a href="/interactions/<%= interaction.id %>" class="btn btn-primary">Show</a>
          <a href="/interactions/<%= interaction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_interaction/<%= interaction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
