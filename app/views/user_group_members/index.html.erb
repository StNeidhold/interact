<div class="page-header">
  <h1>
    User group members
    <a href="/user_group_members/new" class="btn btn-lg btn-success">New User group member</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>User group</th>
        <th>Is admin</th>
        <th>Actions</th>
      </tr>

      <% @user_group_members.each do |user_group_member| %>
      <tr>
        <td><%= user_group_member.user.email %></td>
        <td><%= user_group_member.user_group.group_access_setting_id %></td>
        <td><%= user_group_member.is_admin %></td>
        <td>
          <a href="/user_group_members/<%= user_group_member.id %>" class="btn btn-primary">Show</a>
          <a href="/user_group_members/<%= user_group_member.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_group_member/<%= user_group_member.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_group_members, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
