<div class="page-header">
  <h1>
    Settings
    <a href="/settings/new" class="btn btn-lg btn-success">New Setting</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td>
          <a href="/settings/<%= setting.id %>" class="btn btn-primary">Show</a>
          <a href="/settings/<%= setting.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_setting/<%= setting.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
