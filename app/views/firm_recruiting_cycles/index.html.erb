<div class="page-header">
  <h1>
    Firm recruiting cycles
    <a href="/firm_recruiting_cycles/new" class="btn btn-lg btn-success">New Firm recruiting cycle</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Firm</th>
        <th>First round start</th>
        <th>Superday start</th>
        <th>Actions</th>
      </tr>

      <% @firm_recruiting_cycles.each do |firm_recruiting_cycle| %>
      <tr>
        <td><%= firm_recruiting_cycle.firm.name %></td>
        <td><%= firm_recruiting_cycle.first_round_start %></td>
        <td><%= firm_recruiting_cycle.superday_start %></td>
        <td>
          <a href="/firm_recruiting_cycles/<%= firm_recruiting_cycle.id %>" class="btn btn-primary">Show</a>
          <a href="/firm_recruiting_cycles/<%= firm_recruiting_cycle.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_firm_recruiting_cycle/<%= firm_recruiting_cycle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @firm_recruiting_cycles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
