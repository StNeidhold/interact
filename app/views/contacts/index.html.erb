<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Banking title</th>
        <th>Firm</th>
        <th>Gender</th>
        <th>College</th>
        <th>Business school</th>
        <th>Firm group</th>
        <th>Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.banking_title.firm_id %></td>
        <td><%= contact.firm.name %></td>
        <td><%= contact.gender_id %></td>
        <td><%= contact.college_id %></td>
        <td><%= contact.business_school_id %></td>
        <td><%= contact.firm_group_id %></td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn btn-primary">Show</a>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
