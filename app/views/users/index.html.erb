<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Gender</th>
        <th>College</th>
        <th>Business school</th>
        <th>Status</th>
        <th>User privacy setting</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td>
          <% if user.gender.present? %>
            <a href="/genders/<%= user.gender.id %>">
              <%= user.gender.gender %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.college.present? %>
            <a href="/colleges/<%= user.college.id %>">
              <%= user.college.college_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.business_school.present? %>
            <a href="/business_schools/<%= user.business_school.id %>">
              <%= user.business_school.business_school_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.status.present? %>
            <a href="/statuses/<%= user.status.id %>">
              <%= user.status.status %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.user_privacy_setting.present? %>
            <a href="/user_privacy_settings/<%= user.user_privacy_setting.id %>">
              <%= user.user_privacy_setting.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
