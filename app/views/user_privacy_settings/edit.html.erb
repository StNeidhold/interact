<!-- Validation failure messages -->
<% if @user_privacy_setting.errors.any? %>
  <% @user_privacy_setting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit User Privacy Setting #<%= @user_privacy_setting.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user_privacy_setting/<%= @user_privacy_setting.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @user_privacy_setting.user_id %>">
      </div>

      <!-- Label and input for share_contacts -->
      <div class="checkbox">
        <label for="share_contacts">
          <input type="checkbox" id="share_contacts" name="share_contacts" value="1" <%= "checked" if @user_privacy_setting.share_contacts %>>
          Share contacts
        </label>
      </div>

      <!-- Label and input for share_interactions -->
      <div class="checkbox">
        <label for="share_interactions">
          <input type="checkbox" id="share_interactions" name="share_interactions" value="1" <%= "checked" if @user_privacy_setting.share_interactions %>>
          Share interactions
        </label>
      </div>

      <!-- Label and input for share_events -->
      <div class="checkbox">
        <label for="share_events">
          <input type="checkbox" id="share_events" name="share_events" value="1" <%= "checked" if @user_privacy_setting.share_events %>>
          Share events
        </label>
      </div>

      <button class="btn btn-warning">
        Update User Privacy Setting
      </button>
      or
      <a href="/user_privacy_settings/<%= @user_privacy_setting.id %>">Cancel</a>
    </form>
  </div>
</div>
