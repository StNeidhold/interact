<div class="page-header">
  <h1>
    User privacy settings
    <a href="/user_privacy_settings/new" class="btn btn-lg btn-success">New User privacy setting</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Share contacts</th>
        <th>Share interactions</th>
        <th>Share events</th>
        <th>Actions</th>
      </tr>

      <% @user_privacy_settings.each do |user_privacy_setting| %>
      <tr>
        <td><%= user_privacy_setting.user_id %></td>
        <td><%= user_privacy_setting.share_contacts %></td>
        <td><%= user_privacy_setting.share_interactions %></td>
        <td><%= user_privacy_setting.share_events %></td>
        <td>
          <a href="/user_privacy_settings/<%= user_privacy_setting.id %>" class="btn btn-primary">Show</a>
          <a href="/user_privacy_settings/<%= user_privacy_setting.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_privacy_setting/<%= user_privacy_setting.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
