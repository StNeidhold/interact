<div class="page-header">
  <h1>
    Colleges
    <a href="/colleges/new" class="btn btn-lg btn-success">New College</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>College name</th>
        <th>Actions</th>
      </tr>

      <% @colleges.each do |college| %>
      <tr>
        <td><%= college.college_name %></td>
        <td>
          <a href="/colleges/<%= college.id %>" class="btn btn-primary">Show</a>
          <a href="/colleges/<%= college.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_college/<%= college.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @colleges, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
