<div class="page-header">
  <h1>
    Us states
    <a href="/us_states/new" class="btn btn-lg btn-success">New Us state</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>State name</th>
        <th>Actions</th>
      </tr>

      <% @us_states.each do |us_state| %>
      <tr>
        <td><%= us_state.state_name %></td>
        <td>
          <a href="/us_states/<%= us_state.id %>" class="btn btn-primary">Show</a>
          <a href="/us_states/<%= us_state.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_us_state/<%= us_state.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @us_states, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
