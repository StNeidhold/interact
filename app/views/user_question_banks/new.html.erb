<!-- Validation failure messages -->
<% if @user_question_bank.errors.any? %>
  <% @user_question_bank.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User Question Bank</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user_question_bank" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_question_bank.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :stem, @user_question_bank.question_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create User Question Bank
      </button>
      or
      <a href="/user_question_banks">Cancel</a>
    </form>
  </div>
</div>
