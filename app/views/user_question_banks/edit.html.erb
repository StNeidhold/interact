<!-- Validation failure messages -->
<% if @user_question_bank.errors.any? %>
  <% @user_question_bank.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit User Question Bank #<%= @user_question_bank.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user_question_bank/<%= @user_question_bank.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_question_bank.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <input type="text" id="question_id" name="question_id" placeholder="Question" class="form-control" value="<%= @user_question_bank.question_id %>">
      </div>

      <button class="btn btn-warning">
        Update User Question Bank
      </button>
      or
      <a href="/user_question_banks/<%= @user_question_bank.id %>">Cancel</a>
    </form>
  </div>
</div>
