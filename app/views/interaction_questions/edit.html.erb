<!-- Validation failure messages -->
<% if @interaction_question.errors.any? %>
  <% @interaction_question.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Interaction Question #<%= @interaction_question.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_interaction_question/<%= @interaction_question.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for interaction_id -->
      <div class="form-group">
        <label for="interaction_id" class="control-label">
          Interaction
        </label>

        <%= select_tag(:interaction_id, options_from_collection_for_select(Interaction.all, :id, :user_id, @interaction_question.interaction_id), :class => "form-control") %>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :stem, @interaction_question.question_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Interaction Question
      </button>
      or
      <a href="/interaction_questions/<%= @interaction_question.id %>">Cancel</a>
    </form>
  </div>
</div>
