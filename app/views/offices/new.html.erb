<!-- Validation failure messages -->
<% if @office.errors.any? %>
  <% @office.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Office</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_office" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for firm_id -->
      <div class="form-group">
        <label for="firm_id" class="control-label">
          Firm
        </label>

        <input type="text" id="firm_id" name="firm_id" placeholder="Firm" class="form-control" value="<%= @office.firm_id %>">
      </div>

      <!-- Label and input for city_id -->
      <div class="form-group">
        <label for="city_id" class="control-label">
          City
        </label>

        <input type="text" id="city_id" name="city_id" placeholder="City" class="form-control" value="<%= @office.city_id %>">
      </div>

      <!-- Label and input for firm_hq -->
      <div class="checkbox">
        <label for="firm_hq">
          <input type="checkbox" id="firm_hq" name="firm_hq" value="1" <%= "checked" if @office.firm_hq %>>
          Firm hq
        </label>
      </div>

      <button class="btn btn-success">
        Create Office
      </button>
      or
      <a href="/offices">Cancel</a>
    </form>
  </div>
</div>
