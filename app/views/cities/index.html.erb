<div class="page-header">
  <h1>
    Cities
    <a href="/cities/new" class="btn btn-lg btn-success">New City</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City name</th>
        <th>State</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>

      <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td>
          <% if city.city_state.present? %>
            <a href="/us_states/<%= city.city_state.id %>">
              <%= city.city_state.state_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if city.city_country.present? %>
            <a href="/countries/<%= city.city_country.id %>">
              <%= city.city_country.country_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/cities/<%= city.id %>" class="btn btn-primary">Show</a>
          <a href="/cities/<%= city.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_city/<%= city.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
