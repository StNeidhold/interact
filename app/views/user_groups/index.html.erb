<div class="page-header">
  <h1>
    User groups
    <a href="/user_groups/new" class="btn btn-lg btn-success">New User group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group access setting</th>
        <th>Name</th>
        <th>Description</th>
        <th>Group privacy setting</th>
        <th>Actions</th>
      </tr>

      <% @user_groups.each do |user_group| %>
      <tr>
        <td>
          <% if user_group.group_access_setting.present? %>
            <a href="/group_access_settings/<%= user_group.group_access_setting.id %>">
              <%= user_group.group_access_setting.acessibility %>
            </a>
          <% end %>
        </td>
        <td><%= user_group.name %></td>
        <td><%= user_group.description %></td>
        <td>
          <% if user_group.group_privacy_setting.present? %>
            <a href="/group_privacy_settings/<%= user_group.group_privacy_setting.id %>">
              <%= user_group.group_privacy_setting.user_group_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/user_groups/<%= user_group.id %>" class="btn btn-primary">Show</a>
          <a href="/user_groups/<%= user_group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_group/<%= user_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
